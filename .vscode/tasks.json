{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "EMHASS install",
            "command": "pip3",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "install",
                "--no-deps",
                "--force-reinstall",
                "--editable",
                "."
            ],
            "presentation": {
                "echo": true,
                "panel": "shared",
                "focus": true
            }
        },
        {
            "label": "EMHASS install with dependencies",
            "command": "pip3",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "install", "--force-reinstall", "."
            ],
            "presentation": {
                "echo": true,
                "panel": "shared",
                "focus": true
            }
        }
    ]
}